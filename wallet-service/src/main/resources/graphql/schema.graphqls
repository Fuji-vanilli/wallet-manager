type Query {
    userWallets: [WalletResponse],
    walletById(id: String): WalletResponse
    getByID(id: Float): WalletTransactionResponse
}

type Mutation {
    addWallet(request: WalletRequest): WalletResponse,
    proceed(request: WalletTransactionRequest): WalletTransactionResponse
}

input WalletRequest {
    balance: Float,
    userID: String,
    currencyCode: String
}

input WalletTransactionRequest {
    amount: Float,
    type: String,
    walletID: String,
    walletDestinationID: String
}

type WalletTransactionResponse {
    id: Float,
    timestamp: String,
    amount: Float,
    saleCurrencyPrice: Float,
    purchaseCurrencyPrice: Float,
    walletDestinationID: String,
    wallet: WalletResponse,
    type: String
}

type WalletResponse {
    id: String,
    balance: Float,
    createdAt: Float,
    currency: Currency,
    walletTransactions: [WalletTransaction]
}

type Currency {
    code: String,
    name: String,
    symbol: String,
    salePrice: Float,
    purchasePrice: Float
}

type WalletTransaction {
    id: Float,
    amount: Float,
    timestamp: Float,
    type: String,
    walletDestinationID: String,
    wallet: WalletResponse
}
